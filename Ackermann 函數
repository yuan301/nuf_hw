 #include <iostream>
 using namespace std;
int ackermann(int m, int n) {
 // 當 m為0時，返回n+1
 if (m == 0) {
 return n + 1;
 }
 // 當 m大於0且n為0時，調用Ackermann函數，m減1，n為1
 if (n == 0) {
 return ackermann(m- 1, 1);
 }
 // 計算 A(m-1, A(m, n-1))
 return ackermann(m- 1, ackermann(m, n- 1));
 }
 int main() {
 int m, n;
 cout << "請輸入 m和n的值:";
 cin >> m >> n;
 int result = ackermann(m, n);
 cout << "Ackermann(" << m << ", " << n << ") = " << result << endl;
 return 0;
 }
